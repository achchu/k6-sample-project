{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@types/k6", "@types/jest", "node"],
    "moduleResolution": "node"
  },
  "include": ["performance/**/*.ts", "test/**/*.ts", "src/**/*.ts"]
}
